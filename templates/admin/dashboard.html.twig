{% extends "admin/layout.html.twig" %}

{% block main %}
    <h1>Dashboard</h1>
    <h2>Bienvenue {{ user.firstname }} {{ user.lastname }}</h2>

    <header>
        <a href="" class="btn-primary btn">Créer un produit</a>
    </header>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">Image</th>
            <th scope="col">Disponible</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>@mdo</td>
            <td>@mdo</td>
            <td>
                <a href="" class="btn btn-info">Éditer</a>
                <button data-id="1" class="btn btn-danger btn-delete">Supprimer</button>
            </td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td>@fat</td>
            <td>@fat</td>
            <td>
                <a href="" class="btn btn-info">Éditer</a>
                <button data-id="2" class="btn btn-danger btn-delete">Supprimer</button>
            </td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td colspan="2">Larry the Bird</td>
            <td>@twitter</td>
            <td>@twitter</td>
            <td>
                <a href="" class="btn btn-info">Éditer</a>
                <button data-id="3" class="btn btn-danger btn-delete">Supprimer</button>
            </td>
        </tr>
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer le produit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Attention cette action est irréversible
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <a href="" type="button" class="btn btn-danger" id="btn-delete-modal">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}