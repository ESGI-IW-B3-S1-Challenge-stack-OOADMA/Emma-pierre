{% extends "admin/layout.html.twig" %}

{% block main %}
    <section>
        <h1>Créer une valeur pour le groupe d'attribut : {{ attributeGroup.name }}</h1>
        <form name="attribute_new" action="/admin/attributes-group/{{ attributeGroup.id }}/attribute/new" method="post">
            {% if display_errors %}
                <div class="mb-3 text-danger text-center">
                    La valeur existe déjà dans ce groupe d'attribut !
                </div>
            {% endif %}
            <div class="row justify-content-center mb-3">
               <div class="col-6">
                   <label for="data" class="col-form-label">Valeur : </label>
                   <input type="text" class="form-control" id="data" name="attribute[data]" required>
               </div>
            </div>
            <div class="row justify-content-center mb-3">
                <div class="col-1">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}