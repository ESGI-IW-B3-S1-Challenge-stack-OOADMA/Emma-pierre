{% extends "admin/layout.html.twig" %}

{% block main %}
    <h1>Liste des groupes d'attributs</h1>
    <header>
        <a href="/admin/attributes-group/new" class="btn-primary btn">Créer un attribut</a>
    </header>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nom</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for attributeGroup in attributeGroups %}
            <tr>
                <th scope="row">{{ attributeGroup.id }}</th>
                <td>{{ attributeGroup.name }}</td>
                <td>
                    <a href="/admin/attributes-group/{{ attributeGroup.id }}/detail" class="btn btn-success">Voir les valeurs</a>
                    <a href="/admin/attributes-group/{{ attributeGroup.id }}/edit" class="btn btn-info">Éditer</a>
{#                    <button data-id="{{ attributeGroup.id }}" data-href="/admin/attributes-group/{{ attributeGroup.id }}/delete" class="btn btn-danger btn-delete">Supprimer</button>#}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="modal-delete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Supprimer le produit</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Attention cette action est irréversible
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                    <a href="" type="button" class="btn btn-danger" id="btn-delete-modal">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}