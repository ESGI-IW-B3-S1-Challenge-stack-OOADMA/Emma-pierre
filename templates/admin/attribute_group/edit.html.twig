{% extends "admin/layout.html.twig" %}

{% block main %}
    <section>
        <h1>Édition du groupe d'attribut : {{ attributeGroup.name }}</h1>
        <form name="attribute_edit" action="/admin/attributes-group/{{ attributeGroup.id }}/edit" method="post">
            {% if display_errors %}
                <div class="mb-3 text-danger text-center">
                    Ce groupe d'attribut existe déjà.
                </div>
            {% endif %}
            <div class="row justify-content-center mb-3">
                <div class="col-6">
                    <label for="name" class="col-form-label">Nom : </label>
                    <input type="text" class="form-control" id="name" name="attribute_group[name]"
                           value="{{ attributeGroup.name }}" required>
                </div>
            </div>
            <div class="row justify-content-center mb-3">
                <div class="col-6">
                    <label for="attribute_type" class="col-form-label">Type d'attribut : </label>
                    <select class="form-select" name="attribute_group[attribute_type]" id="attribute_type" required>
                        <option value="dropdown" {% if attributeGroup.attributeType is same as "dropdown" %} selected {% endif %}>
                            Menu déroulant
                        </option>
                        <option value="radio_button" {% if attributeGroup.attributeType is same as "radio_button" %} selected {% endif %}>
                            Bouton radio
                        </option>
                        <option value="color" {% if attributeGroup.attributeType is same as "color" %} selected {% endif %}>
                            Couleur
                        </option>
                    </select>
                </div>
            </div>
            <div class="row justify-content-center mb-3">
                <div class="col-1">
                    <button type="submit" class="btn btn-primary">Éditer</button>
                </div>
            </div>
        </form>
    </section>
{% endblock %}